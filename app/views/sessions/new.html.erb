<div class="py-20 h-screen px-2">
    <div class="max-w-md mx-auto bg- rounded-lg overflow-hidden md:max-w-md">
    <% flash.each do |type, msg|%>
      <h1 class="text-center p-1 text-lg font-light text-red-500"> 
        <%= msg %>
      </h1>
    <% end %>
        <div class="md:flex">
            <div class="w-full p-3 px-6 py-10">
              <%= form_tag sessions_path do %>
                <div class="text-center"> <span class="text-xl text-gray-700">Sign In</span> </div>
                <div class="mt-3 relative"> <span class="absolute p-1 bottom-8 ml-2 bg-white text-gray-400 ">Username</span> <%= text_field_tag :username, params[:username],class:"h-12 px-2 w-full border-2 rounded focus:outline-none focus:border-red-600" %> </div>          
                <div class="mt-4"> <%= submit_tag "Sign In", class: "h-12 w-full bg-red-600 text-white rounded hover:bg-red-700" %> </div>
              <% end %>
            </div>
        </div>
    </div>
</div>
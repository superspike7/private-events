<div class="py-20 h-screen bg-gray-300 px-2">
    <div class="max-w-md mx-auto bg-white rounded-lg overflow-hidden md:max-w-md">
        <div class="md:flex">
            <div class="w-full p-3 px-6 py-10">
              <%= form_for(@event) do |f| %>
                <div class="text-center"> <span class="text-xl text-gray-700">Create Event</span> </div>
                <div class="mt-3 relative"> <span class="absolute p-1 bottom-8 ml-2 bg-white text-gray-400 ">Name</span> <%= f.text_field :name, class: "h-12 px-2 w-full border-2 rounded focus:outline-none focus:border-red-600" %> </div>
                <div class="mt-3 relative"> <span class="absolute p-1 bottom-8 ml-2 bg-white text-gray-400 ">Location</span> <%= f.text_field :location, class:"h-12 px-2 w-full border-2 rounded focus:outline-none focus:border-red-600" %> </div>          
                <div class="mt-3 relative"> <span class="absolute p-1 bottom-8 ml-2 bg-white text-gray-400 ">Schedule</span> <%= f.date_field :schedule, class:"h-12 px-2 w-full border-2 rounded focus:outline-none focus:border-red-600" %> </div>          
                <div class="mt-4"> <%= f.submit "Create", class: "h-12 w-full bg-red-600 text-white rounded hover:bg-red-700" %> </div>
              <% end %>
            </div>
        </div>
    </div>
</div>
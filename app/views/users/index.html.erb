<div class="p-10 grid grid-cols-1 sm:grid-cols-1 md:grid-cols-3 lg:grid-cols-3 xl:grid-cols-3 gap-5">

<% @users.each do |user| %> 

  <div class="max-w-xs rounded overflow-hidden shadow-lg my-2">
    <div class="px-6 py-4">
      <div class="font-bold text-xl mb-2">User: <%= user.id %></div>
      <p class="text-grey-darker text-base">
        name: <%= user.name %> <br>
        Created events: <br>
        <div>
          <% user.created_events.each do |e| %>
          id: <%= e.id %> <br>
           name: <%= e.name %> <br>
           place: <%= e.location %> <br>
           date: <%= e.created_at %>
          <% end %>
        </div>
      </p>
    </div>
    <div class="px-6 pt-4 pb-2">
      <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2"><%= link_to "Show", user %></span>
      <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2"><%= link_to "Delete", user, method: :delete, data: { confirm: "Are you sure?" } %></span>
    </div>
  </div>

<% end %>

</div>
